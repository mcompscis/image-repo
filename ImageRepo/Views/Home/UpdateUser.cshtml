@model ImageRepo.Models.UserModel
@{
    ViewData["Title"] = "UpdateUser";
    UserModel user = TempData["userTemp"] as UserModel;
}

<div class="container">
    <form action="/home/UpdateUserFinal" method="post">
        <input type="hidden" asp-for="Id" value="@user.Id" />
        <div class="form-group">
            <label>Email address</label>
            <input type="email" placeholder="Enter email" asp-for="Email" value="@user.Email"/>
            <span asp-validation-for="Email" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label>Name</label>
            <input type="text" asp-for="Name" value="@user.Name"/>
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label>Username</label>
            <input type="text" asp-for="UserName" value="@user.UserName"/>
            <span asp-validation-for="UserName" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label>Age</label>
            <input type="number" asp-for="Age" value="@user.Age" />
            <span asp-validation-for="Age" class="text-danger"></span>
        </div>
        <button type="submit" class="btn btn-primary">Submit</button>
    </form>
</div>
